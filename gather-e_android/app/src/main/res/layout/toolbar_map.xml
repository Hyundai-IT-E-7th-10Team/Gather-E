<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="wrap_content"
    android:layout_marginLeft="-16dp"
    android:layout_height="100dp"
    android:background="@android:color/transparent">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"

            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/action_navigation_map_to_map_button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_reset"
                android:drawableTint="@color/light_purple"
                android:paddingHorizontal="15dp"
                android:drawablePadding="10dp"
                android:layout_marginRight="10dp"
                android:elevation="30dp"
                android:textSize="13dp"
                android:fontFamily="@font/gmarketsansmedium"
                android:background="@drawable/background_map_button"
                android:text="초기화" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/action_navigation_map_to_map_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_calendar"
                android:drawableTint="@color/light_purple"
                android:paddingHorizontal="15dp"
                android:drawablePadding="10dp"
                android:textSize="13dp"
                android:layout_marginRight="10dp"
                android:elevation="30dp"
                android:fontFamily="@font/gmarketsansmedium"
                android:background="@drawable/background_map_button"
                android:text=" 현재 모집 중" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/action_navigation_map_to_map_button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_list"
                android:drawableTint="@color/light_purple"
                android:paddingHorizontal="15dp"
                android:textSize="13dp"
                android:drawablePadding="10dp"
                android:layout_marginRight="10dp"
                android:elevation="30dp"
                android:fontFamily="@font/gmarketsansmedium"
                android:background="@drawable/background_map_button"
                android:text=" 참여한 모임" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/action_navigation_map_to_map_button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_mypage"
                android:drawableTint="@color/light_purple"
                android:paddingHorizontal="15dp"
                android:drawablePadding="10dp"
                android:textSize="13dp"
                android:layout_marginRight="10dp"
                android:elevation="30dp"
                android:fontFamily="@font/gmarketsansmedium"
                android:background="@drawable/background_map_button"
                android:text=" 내가 주최한 모임" />



        </LinearLayout>

    </HorizontalScrollView>

</androidx.appcompat.widget.Toolbar>
