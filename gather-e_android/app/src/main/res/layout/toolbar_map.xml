<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/light_purple">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/action_navigation_map_to_map_button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_reset"
                android:text="   초기화" />

            <Button
                android:id="@+id/action_navigation_map_to_map_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_calendar"
                android:text="   현재 모집 중" />

            <Button
                android:id="@+id/action_navigation_map_to_map_button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_list"
                android:text="   참여한 모임" />

            <Button
                android:id="@+id/action_navigation_map_to_map_button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_mypage"
                android:text="   내가 주최한 모임" />

        </LinearLayout>

    </HorizontalScrollView>

</androidx.appcompat.widget.Toolbar>
